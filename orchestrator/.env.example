# Application Settings
APP_NAME=HA Config Manager
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://haconfig:haconfig@postgres:5432/haconfig
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# GitHub
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_WEBHOOK_SECRET=your-webhook-secret
GITHUB_REPO_OWNER=
GITHUB_REPO_NAME=

# Tailscale
TAILSCALE_API_KEY=your-tailscale-api-key
TAILSCALE_TAILNET=your-tailnet-name

# OpenRouter / Deepseek AI
OPENROUTER_API_KEY=your-openrouter-api-key
AI_MODEL=deepseek/deepseek-chat
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# MinIO / S3
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET=ha-config-backups

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8123

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@haconfig.local

# Deployment
BACKUP_BEFORE_DEPLOY=true
VALIDATE_BEFORE_DEPLOY=true
MAX_PARALLEL_DEPLOYMENTS=3
DEPLOYMENT_TIMEOUT=300

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# Encryption
ENCRYPTION_KEY=your-32-byte-base64-encoded-key

# Home Assistant
HA_SUPERVISOR_TOKEN=
HA_LONG_LIVED_TOKEN=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
