# HA Config Manager - Environment Configuration
# Copy this file to .env and fill in your values

# ========================================
# ORCHESTRATOR CONFIGURATION
# ========================================

# API Server
API_HOST=0.0.0.0
API_PORT=8080
LOG_LEVEL=INFO

# Database (SQLite for dev, PostgreSQL for production)
DATABASE_URL=sqlite:///./ha-config-manager.db
# DATABASE_URL=postgresql://user:password@localhost:5432/haconfig

# ========================================
# GITHUB CONFIGURATION
# ========================================

# Webhook Secret (generate with: openssl rand -hex 32)
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# GitHub Personal Access Token (for testing)
GITHUB_TOKEN=ghp_your_token_here

# ========================================
# SECURITY
# ========================================

# API Secret Key (generate with: openssl rand -hex 32)
API_SECRET_KEY=your-secret-key-here

# Allowed CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ========================================
# DASHBOARD CONFIGURATION
# ========================================

# API URL for frontend
VITE_API_URL=http://localhost:8080

# ========================================
# ADD-ON CONFIGURATION
# ========================================

# Default values for development
DEFAULT_SYNC_INTERVAL=300
DEFAULT_CONFIG_PATH=/config

# ========================================
# FEATURES FLAGS
# ========================================

# Enable/disable features
ENABLE_WEBHOOKS=true
ENABLE_AUTO_SYNC=true
ENABLE_NOTIFICATIONS=false
ENABLE_METRICS=false

# ========================================
# NOTIFICATIONS (Optional)
# ========================================

# Slack
SLACK_WEBHOOK_URL=

# Discord
DISCORD_WEBHOOK_URL=

# Email
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# ========================================
# MONITORING (Optional)
# ========================================

# Sentry
SENTRY_DSN=

# Prometheus
PROMETHEUS_ENABLED=false

# ========================================
# DEVELOPMENT
# ========================================

# Debug mode
DEBUG=false

# Reload on code changes
AUTO_RELOAD=false
